<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".Mageireia">


    <ImageView
        android:id="@+id/mageireia"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/menu_mageiria" />

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:layout_marginTop="200dp"
        android:text=" "
        android:textColor="#CDFFFFFF"
        android:textSize="22dp"
        android:textStyle="italic|bold" />

    <TextView
        android:id="@+id/prwino"
        android:layout_below="@id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Πρωινό:     Βούτυρο,
        Μαρμελάδα, Ψωμί             "
        android:layout_marginTop="50dp"
        android:textStyle="italic"
        android:textSize="22dp"
        android:textColor="#CDFFFFFF"
        android:layout_marginLeft="50dp" />

    <TextView
        android:id="@+id/dekatiano"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/prwino"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:text="Δεκατιανό:                         "
        android:textColor="#CDFFFFFF"
        android:textSize="23dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/mesimeriano"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Μεσημεριανό:                 "
        android:textStyle="italic"
        android:layout_below="@id/dekatiano"
        android:textSize="24dp"
        android:layout_marginLeft="50dp"/>

    <TextView
        android:id="@+id/vradino"
        android:layout_below="@id/mesimeriano"
        android:layout_marginTop="55dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Βραδινό:                        "
        android:textStyle="italic"
        android:textSize="25dp"
        android:layout_marginLeft="50dp"/>

</RelativeLayout>